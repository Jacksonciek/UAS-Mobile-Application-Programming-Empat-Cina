<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plusbg"
    tools:context=".PlusItemFragment">

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back button -->
        <Button
            android:id="@+id/backButtonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@drawable/backbutton"
            android:textColor="#EBFADC"
            android:padding="8dp"/>

        <!-- Title text -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textColor="#EBFADC"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Item Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="#EBFADC"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/insertItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:hint="Enter item name"
            android:padding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#EBFADC"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/locationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:hint="Enter location"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:inputType="text" />


        <!-- Image Selection -->
        <Button
            android:id="@+id/buttonImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textColor="#EBFADC"
            android:padding="8dp"/>

        <!-- Stock Adjustment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stock"
            android:textColor="#EBFADC"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnDecrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:background="@color/black"
                android:textColor="#EBFADC"
                android:padding="8dp"/>

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#EBFADC"
                android:textSize="24sp"
                android:gravity="center"/>

            <Button
                android:id="@+id/btnIncrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="@color/black"
                android:textColor="#EBFADC"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Expiration Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expiration Date"
            android:textColor="#EBFADC"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/expiredDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:hint="Select Expiration Date"
            android:padding="8dp"
            android:focusable="false"/>

        <!-- Full Description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#EBFADC"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/fulldesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:hint="Enter description"
            android:padding="8dp"/>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveChanges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textColor="#EBFADC"
            android:padding="12dp"
            android:background="#2196F3"/>
    </LinearLayout>
</FrameLayout>
