<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#164A41"
    android:padding="16dp"
    tools:context=".ReviewFragment">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#164A41">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backshipping"
            android:contentDescription="Back"
            android:padding="8dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Reviews"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Settings Button -->
        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Settings"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Reviews Section -->
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/reviewRecyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"-->
<!--        android:padding="8dp"/>-->

    <!-- Example of Review Item -->
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="340dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#F1F9E8"
        android:padding="24dp"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@android:color/white"
                android:contentDescription="Profile"
                android:src="@drawable/profile"/>

            <!-- Review Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Review Title -->
                <TextView
                    android:id="@+id/reviewItemTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ayam Bakar Pak Gendut"
                    android:textColor="#164A41"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <!-- Review Stars -->
                <TextView
                    android:id="@+id/reviewStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★★★★☆"
                    android:textColor="@android:color/holo_orange_light"/>

                <!-- Review Description -->
                <TextView
                    android:id="@+id/reviewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wah, tempat ini bagus sangat lo"
                    android:textColor="#707070"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Button Section -->
<!--    <Button-->
<!--        android:id="@+id/addNewReviewButton"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="center_horizontal"-->
<!--        android:background="@drawable/rounded_button"-->
<!--        android:paddingLeft="24dp"-->
<!--        android:paddingTop="12dp"-->
<!--        android:paddingRight="24dp"-->
<!--        android:paddingBottom="12dp"-->
<!--        android:text="Add New Review"-->
<!--        android:textColor="@color/white"-->
<!--        android:textSize="16sp"-->
<!--        android:textStyle="bold" />-->

</LinearLayout>
