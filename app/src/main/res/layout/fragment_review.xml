<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#164A41"
    android:padding="16dp"
    tools:context=".ReviewFragment">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#164A41">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backshipping"
            android:contentDescription="Back"
            android:padding="8dp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Credits"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Settings Button -->
        <ImageView
            android:id="@+id/settingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Settings"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Scroll Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- First Image -->

            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                android:src="@drawable/jackson" />

            <!-- Second Image -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:text="Jackson Lawrence" />
            <TextView
                android:id="@+id/textView1122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="15sp"
                android:layout_marginBottom="25sp"
                android:text="00000070612" />

            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                android:src="@drawable/louis" />
            <TextView
                android:id="@+id/textView82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:text="Louis Gabriel Hernandes" />
            <TextView
                android:id="@+id/textView11122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="15sp"
                android:layout_marginBottom="25sp"
                android:text="00000070250" />

            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                android:src="@drawable/js" />
            <TextView
                android:id="@+id/textView82225"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:text="Jonathan Susanto" />
            <TextView
                android:id="@+id/textView1315122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="15sp"
                android:layout_marginBottom="25sp"
                android:text="00000071412" />

            <ImageView
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_rectangle"
                android:clipToOutline="true"
                android:src="@drawable/glen" />
            <TextView
                android:id="@+id/textView825"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:text="Glen Owen" />
            <TextView
                android:id="@+id/textView115122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#EBFADC"
                android:textSize="15sp"
                android:layout_marginBottom="25sp"
                android:text="00000070244" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>


