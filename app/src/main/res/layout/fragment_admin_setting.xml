<!-- Update fragment_admin_setting.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F6F6E9"
    tools:context=".SettingFragment">

    <!-- Settings Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Spacer for Left Edge -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Left Icon (Email) -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Left Icon"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Spacer between Left Icon and Profile Text -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Profile Text in the Center -->
            <TextView
                android:id="@+id/settingsTitle"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/currency_square"
                android:gravity="center"
                android:text="Settings"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spacer between Profile Text and Right Icon -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Right Icon (Exit) -->
            <ImageView
                android:id="@+id/iconRightLogOut"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Right Icon"
                android:src="@drawable/exit" />

            <!-- Spacer for Right Edge -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/avatarImageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="50dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_rounded_corner_24" />

                <TextView
                    android:id="@+id/personalInfoLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Personal Information"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/personalInfoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="5dp"
                    android:text="Name"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameField"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:background="@drawable/currency_square"
                    android:textColor="#EBFADC"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColorHint="#80EBFADC"
                    android:text="Admin" />

                <TextView
                    android:id="@+id/personalInfoLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Phone Number"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneField"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:background="@drawable/currency_square"
                    android:textColor="#EBFADC"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColorHint="#80EBFADC"
                    android:text="081234567890" />

                <TextView
                    android:id="@+id/personalInfoLabel23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="5dp"
                    android:text="Email"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/phoneField3"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:background="@drawable/currency_square"
                    android:textColor="#EBFADC"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textSize="16sp"
                    android:textColorHint="#80EBFADC"
                    android:text="admin@gmail.com" />

                <TextView
                    android:id="@+id/passwordLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Password"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/passwordField"
                        android:layout_width="323dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/currency_square"
                        android:gravity="start"
                        android:padding="20dp"
                        android:text="*************"
                        android:textColor="#EBFADC"
                        android:textColorHint="#80EBFADC"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/togglePasswordVisibility"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="Toggle Password Visibility"
                        android:src="@drawable/eye_closed2" />
                </LinearLayout>


                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="300dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/currency_square"
                    android:gravity="center"
                    android:text="Logout"
                    android:textColor="#EBFADC"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
