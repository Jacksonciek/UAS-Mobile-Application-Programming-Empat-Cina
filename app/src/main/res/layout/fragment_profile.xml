<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#EBFADC">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Spacer for Left Edge -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Left Icon (Email) -->
        <ImageView
            android:id="@+id/iconLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Left Icon"
            android:src="@drawable/mail" />

        <!-- Spacer between Left Icon and Profile Text -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Profile Text in the Center -->
        <TextView
            android:id="@+id/profileText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/currency_square"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#EBFADC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spacer between Profile Text and Right Icon -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Right Icon (Exit) -->
        <ImageView
            android:id="@+id/iconRightLogOut"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Right Icon"
            android:src="@drawable/exit" />

        <!-- Spacer for Right Edge -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <!-- Profile Section -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/baseline_person_24" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:textColor="#2A2A2A"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:textColor="#707070"
        android:textSize="14sp" />

    <!-- Profile Phone Number -->
    <TextView
        android:id="@+id/profilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_gravity="center"
        android:textColor="#707070"
        android:textSize="14sp" />

    <!-- Menu Options (Flexible Widths) -->
    <TextView
        android:id="@+id/myOrders"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/currency_square"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="My Orders"
        android:textColor="#EBFADC"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Remaining Menu Options with Flexible Widths -->
    <TextView
        android:id="@+id/shippingAddresses"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/currency_square"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Shipping Addresses"
        android:textColor="#EBFADC"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/paymentMethod"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/currency_square"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Payment Method"
        android:textColor="#EBFADC"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myReviews"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/currency_square"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="My Reviews"
        android:textColor="#EBFADC"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/currency_square"
        android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:text="Settings"
        android:textColor="#EBFADC"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>
