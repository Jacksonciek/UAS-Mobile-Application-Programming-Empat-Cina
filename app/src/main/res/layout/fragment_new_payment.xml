<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/cartbg"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <!-- Spacer for Left Edge -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Left Icon (Email) -->
        <ImageView
            android:id="@+id/backButtonUjung"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Left Icon"
            android:src="@drawable/baseline_arrow_back_ios_242" />

        <!-- Spacer between Left Icon and Profile Text -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Profile Text in the Center -->
        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:background="@drawable/currency_square"
            android:gravity="center"
            android:text="Add Payment Method"
            android:textColor="#EBFADC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spacer between Profile Text and Right Icon -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Right Icon (Exit) -->
        <ImageView
            android:id="@+id/iconRightLogOut"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Right Icon"
            android:src="@drawable/exit2" />

        <!-- Spacer for Right Edge -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/paymentOptionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:buttonTint="#EBFADC"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EBFADC"
            android:buttonTint="#EBFADC"
            android:textStyle="bold"
            android:text="Mastercard" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#EBFADC"
            android:textColor="#EBFADC"
            android:textStyle="bold"
            android:layout_marginLeft="15sp"
            android:text="PayPal" />

        <!-- Add more payment options -->
    </RadioGroup>

    <EditText
        android:id="@+id/cardNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addpayment"
        android:drawableEnd="@drawable/edit2"
        android:padding="15sp"
        android:layout_marginTop="10sp"
        android:textColor="#135040"
        android:hint="Card Number"
        android:inputType="number" />

    <EditText
        android:id="@+id/labelNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="@drawable/addpayment"
        android:drawableEnd="@drawable/edit2"
        android:padding="15sp"
        android:textColor="#135040"
        android:hint="Label Name" />

    <EditText
        android:id="@+id/cardHolderEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/addpayment"
        android:drawableEnd="@drawable/edit2"
        android:padding="15sp"
        android:textColor="#135040"
        android:layout_marginTop="15sp"
        android:hint="Card Holder" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="@drawable/addpayment"
        android:drawableEnd="@drawable/edit2"
        android:hint="Description (optional)"
        android:inputType="textMultiLine"
        android:padding="30sp"
        android:textColor="#135040" />

    <Button
        android:id="@+id/doneButton"
        android:layout_width="match_parent"
        android:layout_marginTop="150sp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@drawable/currency_square"
        android:textColor="#EBFADC"
        android:text="Done" />
</LinearLayout>
