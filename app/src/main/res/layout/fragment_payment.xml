<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/cartbg"
    tools:context=".PaymentFragment">

    <!-- Settings Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <!-- Spacer for Left Edge -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Left Icon (Back) -->
            <ImageView
                android:id="@+id/backButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Back Button"
                android:src="@drawable/baseline_arrow_back_ios_242"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Spacer between Left Icon and Title -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Title in the Center -->
            <TextView
                android:id="@+id/settingsTitle"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:background="@drawable/currency_square"
                android:gravity="center"
                android:text="Payment Methods"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Spacer between Title and Right Icon -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <!-- Right Icon (Placeholder for future use) -->
            <ImageView
                android:id="@+id/iconRightLogOut"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Placeholder"
                android:src="@drawable/exit2" />

            <!-- Spacer for Right Edge -->
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Scrollable Section -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- RecyclerView to display payment methods -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paymentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </ScrollView>

        <!-- Button to Add New Payment Method -->
        <Button
            android:id="@+id/buttonAddNewPayment"
            android:layout_width="230sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Add New Payment Method"
            android:layout_marginTop="20sp"
            android:textColor="@color/white"
            android:background="@drawable/currency_square" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
