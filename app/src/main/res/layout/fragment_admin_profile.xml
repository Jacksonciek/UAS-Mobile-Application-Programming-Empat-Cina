<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#EBFADC">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Spacer for Left Edge -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Left Icon (Email) -->
        <ImageView
            android:id="@+id/iconLeft"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="invisible"
            android:contentDescription="Left Icon"
            android:src="@drawable/mail" />

        <!-- Spacer between Left Icon and Profile Text -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Profile Text in the Center -->
        <TextView
            android:id="@+id/profileText"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/currency_square"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#EBFADC"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Spacer between Profile Text and Right Icon -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!-- Right Icon (Exit) -->
        <ImageView
            android:id="@+id/iconRightLogOut"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Right Icon"
            android:src="@drawable/exit" />

        <!-- Spacer for Right Edge -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <!-- Profile Section -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_person_24" />

            <TextView
                android:id="@+id/personalInfoLabel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Personal Information"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/personalInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Name"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameField"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/currency_square"
                android:gravity="start"
                android:padding="20dp"
                android:text="Admin"
                android:textColor="#EBFADC"
                android:textColorHint="#80EBFADC"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/personalInfoLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Phone Number"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneField"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/currency_square"
                android:gravity="start"
                android:padding="20dp"
                android:text="081234567890"
                android:textColor="#EBFADC"
                android:textColorHint="#80EBFADC"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/personalInfoLabel23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phoneField3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/currency_square"
                android:gravity="start"
                android:padding="20dp"
                android:text="admin@gmail.com"
                android:textColor="#EBFADC"
                android:textColorHint="#80EBFADC"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Password"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/passwordField"
                    android:layout_width="323dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/currency_square"
                    android:gravity="start"
                    android:padding="20dp"
                    android:text="*************"
                    android:textColor="#EBFADC"
                    android:textColorHint="#80EBFADC"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/togglePasswordVisibility"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="3sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:contentDescription="Toggle Password Visibility"
                    android:src="@drawable/eye_closed2" />
            </LinearLayout>

            <TextView
                android:id="@+id/myReviews"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/currency_square"
                android:drawableEnd="@drawable/baseline_arrow_forward_ios_24"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="Credits"
                android:textColor="#EBFADC"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="300dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/currency_square"
                android:gravity="center"
                android:text="Logout"
                android:textColor="#EBFADC"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


