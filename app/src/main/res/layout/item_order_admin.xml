<!-- Update item_order_admin.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2sp"
    android:layout_marginBottom="10dp"
    android:background="#F8FCF4"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F8FCF4"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Order ID and Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orderIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#135040"
                android:textSize="13sp"
                android:paddingTop="2sp"
                android:paddingBottom="2sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#808080"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#808080" />

        <!-- Quantity and Total Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quantityAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 3"
                android:textColor="#808080"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/itemsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Names and Quantities"
                android:textColor="#808080"
                android:textSize="14sp" />

            <!-- New TextView for Item Names and Quantities -->

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: Rp. 100,000"
                android:textColor="#808080"
                android:textSize="14sp"
                android:translationY="-8sp" />

            <Button
                android:id="@+id/acceptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:textColor="#EBFADC"
                android:textStyle="bold"
                android:layout_marginTop="15px"
                android:layout_marginBottom="5px"
                android:text="Accept Order" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>