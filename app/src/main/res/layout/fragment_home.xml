<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/adminbg"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity=""
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="15sp"
                android:background="@drawable/currency_square"
                android:text="Home"
                android:textColor="#EBFADC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cart_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="200sp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/cartorder" />

            <Button
                android:id="@+id/mail_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:width="10dp"
                android:layout_gravity="end"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/mailorder" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Hello !"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:text="Welcome to EcoFood"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="30sp"
            android:background="@drawable/rounded_rectangle_admin">

            <TextView
                android:id="@+id/openclose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="20sp"
                android:text="Current Spending"
                android:textColor="#EBFADC"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/incomeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25sp"
                android:layout_marginTop="42sp"
                android:text="*************"
                android:textColor="#EBFADC"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/toggleButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:layout_marginTop="20sp"
                android:layout_marginRight="30sp"
                android:background="@drawable/eye_closed" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Almost Expired"
                android:layout_marginLeft="100sp"
                android:textSize="15sp"
                android:textColor="#0F4033"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/seeAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30sp"
                android:drawableRight="@drawable/baseline_keyboard_arrow_right_24"
                android:text="See All"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="358dp"
            android:layout_height="153dp"
            android:layout_marginLeft="20sp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintVertical_bias="0.075" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="30sp"
            android:textColor="#0F4033"
            android:text="Order Now" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5sp"
            android:src="@drawable/aeon" />

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp"
        tools:layout_editor_absoluteX="110dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp"
        tools:layout_editor_absoluteX="122dp">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp"
        tools:layout_editor_absoluteX="134dp">

    </androidx.cardview.widget.CardView>


    <!-- RecyclerView for displaying items -->


</FrameLayout>