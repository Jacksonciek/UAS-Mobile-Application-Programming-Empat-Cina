<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    tools:context=".adapter.HomeAdapter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Image view for photo (smaller size) -->
        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/photo_desc"
            android:scaleType="centerCrop" />

        <!-- Name of the item (smaller text size) -->
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Days left text (smaller text size) -->
        <TextView
            android:id="@+id/daysLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 days left"
            android:textSize="12sp"
            android:textColor="#757575"     android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
