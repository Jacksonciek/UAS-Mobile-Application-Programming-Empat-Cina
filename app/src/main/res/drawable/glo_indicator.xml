<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#90EE90"/> <!-- Light green glow color (e.g., light green) -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#90EE90"/> <!-- Dark green color matching the theme -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
