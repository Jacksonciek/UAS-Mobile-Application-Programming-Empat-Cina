<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#135040"/> <!-- Semi-transparent shadow color -->
            <corners android:radius="16dp"/>
            <padding android:left="0.2dp" android:top="0.2dp" android:right="0.2dp" android:bottom="0.2dp"/>
        </shape>
    </item>

    <!-- Rounded rectangle layer -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#EBFADC"/> <!-- Your background color -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
